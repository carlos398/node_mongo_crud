{{#if tasks}}
  <table class="table table-bordered table-hover table-secondary">
    <thead>
      <tr>
        <th>N.</th>
        <th>Title</th>
        <th> Description</th>
        <th>Operation</th>
      </tr>
    </thead>

    <tbody>
      {{#each tasks}}
        <tr>
          <td>
            {{@index}}
          </td>
          <td>
            {{title}}
          </td>
          <td>
            {{description}}
          </td>
          <td>
            {{#if done}}
              <a
                href="/task/{{_id}}/toggleDone"
                class="btn btn-dark btn-sm"
              >Undone</a>
            {{else}}
              <a
                href="/task/{{_id}}/toggleDone"
                class="btn btn-success btn-sm"
              >Done</a>
            {{/if}}
            <a
              href="/task/{{_id}}/delete"
              class="btn btn-danger btn-sm"
            >Delete</a>
            <a href="/task/{{_id}}/edit" class="btn btn-info btn-sm">Update</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <div class="h-100 d-flex align-items-center justify-content-center">
    <div class="text-center text-white">
      <h2>No tasks</h2>
      <img src="/icons/task.svg" alt="Add a task icon" class="w-65 text-white svg_img" />
    </div>
  </div>
{{/if}}